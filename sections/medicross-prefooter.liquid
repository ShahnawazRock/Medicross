{% liquid
  assign columns_desktop = section.settings.columns_desktop | default: 3
  assign align_header = section.settings.header_alignment | default: 'center'
%}

{% capture children %}
  <div class="medicross-prefooter" style="--columns: {{ columns_desktop }};">
    {% if section.settings.kicker != blank or section.settings.heading != blank or section.settings.subheading != blank %}
      <div class="medicross-prefooter__header medicross-prefooter__header--align-{{ align_header }}">
        {% if section.settings.kicker != blank %}
          <p class="medicross-prefooter__kicker">{{ section.settings.kicker }}</p>
        {% endif %}
        {% if section.settings.heading != blank %}
          <h2 class="medicross-prefooter__heading">{{ section.settings.heading }}</h2>
        {% endif %}
        {% if section.settings.subheading != blank %}
          <div class="medicross-prefooter__subheading rte">{{ section.settings.subheading }}</div>
        {% endif %}
      </div>
    {% endif %}

    {% if section.blocks.size > 0 %}
      <div class="medicross-prefooter__grid">
        {% for block in section.blocks %}
          {% case block.type %}
            {% when 'cta' %}
              <div class="medicross-prefooter__card" {{ block.shopify_attributes }}>
                <div class="medicross-prefooter__card-inner">
                  {% if block.settings.icon != blank %}
                    {{
                      block.settings.icon
                      | image_url: width: 160
                      | image_tag:
                        widths: '80, 120, 160',
                        alt: block.settings.icon.alt,
                        class: 'medicross-prefooter__icon',
                        sizes: '(min-width: 990px) 48px, 40px'
                    }}
                  {% endif %}

                  <div class="medicross-prefooter__content">
                    {% if block.settings.title != blank %}
                      <h3 class="medicross-prefooter__title">{{ block.settings.title }}</h3>
                    {% endif %}
                    {% if block.settings.text != blank %}
                      <div class="medicross-prefooter__text rte">{{ block.settings.text }}</div>
                    {% endif %}

                    {% if block.settings.link != blank and block.settings.label != blank %}
                      <div class="medicross-prefooter__cta">
                        <a href="{{ block.settings.link }}" class="{{ block.settings.style_class | default: 'button' }}">
                          {{ block.settings.label }}
                        </a>
                      </div>
                    {% endif %}
                  </div>
                </div>
              </div>
          {% endcase %}
        {% endfor %}
      </div>
    {% endif %}
  </div>
{% endcapture %}

{% render 'section', section: section, children: children, custom_class: 'medicross-prefooter-wrapper' %}

{% stylesheet %}
  .medicross-prefooter {
    display: grid;
    gap: clamp(16px, 2.5vw, 32px);
  }

  .medicross-prefooter__header {
    display: grid;
    gap: 8px;
    max-width: min(100%, 900px);
    margin-inline: auto;
    text-align: center;
  }

  .medicross-prefooter__header--align-left {
    margin-inline: 0;
    text-align: left;
  }

  .medicross-prefooter__kicker {
    color: var(--color-foreground-muted);
    font-weight: 600;
    letter-spacing: 0.02em;
    text-transform: uppercase;
    font-size: 0.875rem;
  }

  .medicross-prefooter__heading {
    margin: 0;
    font: var(--font-h3);
    color: var(--color-foreground-heading, var(--color-foreground));
  }

  .medicross-prefooter__subheading {
    color: var(--color-foreground-muted);
  }

  .medicross-prefooter__grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: clamp(12px, 2vw, 20px);
  }

  @media screen and (min-width: 750px) {
    .medicross-prefooter__grid {
      grid-template-columns: repeat(var(--columns, 3), minmax(0, 1fr));
    }
  }

  .medicross-prefooter__card {
    background: color-mix(in oklab, var(--color-background) 92%, transparent);
    border: 1px solid var(--color-border);
    border-radius: 16px;
    padding: clamp(16px, 2vw, 24px);
    transition: border-color 200ms ease, transform 200ms ease;
  }

  .medicross-prefooter__card:hover {
    border-color: var(--color-border-strong, var(--color-border));
    transform: translateY(-2px);
  }

  .medicross-prefooter__card-inner {
    display: grid;
    grid-template-columns: auto 1fr;
    align-items: start;
    gap: 14px;
  }

  .medicross-prefooter__icon {
    width: 40px;
    height: 40px;
    object-fit: contain;
  }

  .medicross-prefooter__title {
    margin: 0 0 4px 0;
    font: var(--font-h5);
    color: var(--color-foreground-heading, var(--color-foreground));
  }

  .medicross-prefooter__text {
    color: var(--color-foreground);
  }

  .medicross-prefooter__cta {
    margin-top: 12px;
  }

  .medicross-prefooter__cta .button,
  .medicross-prefooter__cta .link {
    text-decoration: none;
  }
{% endstylesheet %}

