        {
          "type": "select",
          "id": "style_class",
          "label": "Link style",
          "options": [
            { "value": "button", "label": "Primary button" },
            { "value": "link", "label": "Text link" }
          ],
          "default": "button"
        }
      ]
    }
  ],
  "max_blocks": 6,
  "presets": [
    {
      "name": "Medicross pre-footer CTA",
      "category": "Banners",
      "settings": {
        "kicker": "Need assistance?",
        "heading": "Care made simpler",
        "subheading": "<p>Find locations, book an appointment, or get in touch.</p>",
        "columns_desktop": 3,
        "color_scheme": "scheme-2",
        "padding-block-start": 48,
        "padding-block-end": 48
      },
      "blocks": {
        "cta_1": {
          "type": "cta",
          "settings": {
